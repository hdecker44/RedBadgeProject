@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Decker Deals</h1>
    <p class="lead">The easiest way to find your favorite gigs</p>
    <p><a href="https://hdecker44.github.io/hdecker44Final/" class="btn btn-primary btn-lg">Learn more about Decker Deals &raquo;</a></p>
</div>
<div class="carouselDetails">
    <div>

        <h2>Venues</h2>
    </div>
    <div id="carousel" class="carousel slide" data-ride="carousel" style="max-height: 260px; width: 500px; overflow: hidden;">
        <ol class="carousel-indicators">
            <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
            <li data-target="#mycarousel" data-slide-to="1"></li>
            <li data-target="#mycarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox" style="max-height: 300px; width: 500px; color: black; overflow: hidden;">
            <div class="item active">
                <img src="~/Content/assets/blf.png" />
                <div class="carousel-caption">
                    <h4 style="background-color: black; padding: 0px; width: auto;">Bankers Life FieldHouse</h4>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/assets/uc.png" />
                <div class="carousel-caption">
                    <h4 style="background-color: black; padding: 0px; width: auto;">United Center</h4>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/assets/aa.png" />
                <div class="carousel-caption">
                    <h4 style="background-color: black; padding: 0px; width: auto;">American Airlines Arena</h4>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/assets/msg.png" />
                <div class="carousel-caption">
                    <h4 style="background-color: black; padding: 0px; width: auto;">Madison Square Garden</h4>
                </div>
            </div>
            <div class="item">
                <img src="~/Content/assets/staples.png" />
                <div class="carousel-caption">
                    <<h4 style="background-color: black; padding: 0px; width: auto;">>Staples Center</h4>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#mycarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#mycarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<br />
